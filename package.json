{
  "name": "service-warranty-reminder",
  "author": "Viral Ganatra <viral@viralganatra.com>",
  "license": "MIT",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js",
    "start": "serverless offline start",
    "run:local": "sls invoke local -f services-reminder",
    "deploy:prod": "serverless deploy --stage prod",
    "deploy:dev": "serverless deploy --stage dev",
    "lint": "eslint . --ext .js,.ts",
    "format": "prettier --write .",
    "test": "TZ='utc' vitest",
    "typecheck": "tsc -b",
    "prepare": "husky install",
    "validate": "./scripts/validate.sh"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.10.0",
    "@aws-sdk/client-ssm": "^3.678.0",
    "date-fns": "^4.1.0",
    "google-auth-library": "^9.14.2",
    "google-spreadsheet": "^4.1.4",
    "sparkpost": "^2.1.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@aws-sdk/types": "^3.664.0",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/aws-lambda": "^8.10.145",
    "@types/node": "^20.17.1",
    "@types/serverless": "^3.12.22",
    "@types/sparkpost": "^2.1.8",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "aws-lambda": "^1.0.7",
    "aws-sdk-client-mock": "^3.0.1",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "serverless": "^3.38.0",
    "serverless-esbuild": "^1.54.4",
    "serverless-offline": "^13.3.2",
    "serverless-prune-plugin": "^2.1.0",
    "typescript": "^5.6.3",
    "vitest": "^1.1.1"
  },
  "lint-staged": {
    "*.ts": "pnpm format"
  }
}
