{
  "name": "service-warranty-reminder",
  "author": "Viral Ganatra <viral@viralganatra.com>",
  "license": "MIT",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js",
    "start": "serverless offline start",
    "run:local": "sls invoke local -f services-reminder",
    "deploy": "serverless deploy --stage prod",
    "deploy:dev": "serverless deploy --stage dev",
    "lint": "eslint . --ext .js,.ts",
    "format": "prettier --write .",
    "test": "TZ='utc' vitest",
    "typecheck": "tsc -b",
    "prepare": "husky install",
    "validate": "./scripts/validate.sh"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^1.17.0",
    "@aws-sdk/client-ssm": "^3.484.0",
    "date-fns": "^3.0.6",
    "google-auth-library": "^9.4.1",
    "google-spreadsheet": "^4.1.1",
    "sparkpost": "^2.1.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@aws-sdk/types": "^3.468.0",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/aws-lambda": "^8.10.130",
    "@types/node": "^20.10.6",
    "@types/serverless": "^3.12.20",
    "@types/sparkpost": "^2.1.8",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "aws-lambda": "^1.0.7",
    "aws-sdk-client-mock": "^3.0.1",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "serverless": "^3.38.0",
    "serverless-esbuild": "^1.50.1",
    "serverless-offline": "^13.3.2",
    "serverless-prune-plugin": "^2.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.1"
  },
  "lint-staged": {
    "*.ts": "pnpm format"
  }
}
